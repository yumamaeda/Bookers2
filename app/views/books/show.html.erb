    <div class="col-xs-3">
  <div class="profile-container">
<tr>
  <h3>User info</h3>
  <%= attachment_image_tag @users, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  <h4>Name</h4>
  <h4 class="profile-name"><%= @users.name %></h4>
  <h4>Introduction</h4>
  <h4 class="profile-name"><%= @users.introduction %></h4>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集" %></p>
  <% end %>
  </tr>
  <tr>
  <h3>New book</h3>
  <%= form_for(@book) do |f| %>
 
  <h4>Title</h4>
  <%= f.text_field :title %>
 
  <h4>Opinion</h4>
  <%= f.text_area :body %>
 
  <%= f.submit 'Create Book' %>
 
<% end %>
</tr>
</div>
          </div>

