        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= link_to user_path(@user.id) do %><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
            <%= @user.name %><% end %></td>
            <td><%= @books.title %></td>
            <td><%= @books.body %></td>
            <!-- 省略できる -->
